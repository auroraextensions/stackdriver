<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="auroraextensions" translate="label" sortOrder="1000">
            <label>Aurora Extensions</label>
        </tab>

        <section id="stackdriver" translate="label" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Stackdriver</label>
            <tab>auroraextensions</tab>
            <resource>AuroraExtensions_Stackdriver::configuration</resource>
            <group id="details" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Extension Details</label>
                <comment><![CDATA[
                    <style>
                        .auroraextensions_version,
                        .auroraextensions_vendor,
                        .auroraextensions_module,
                        .auroraextensions_documentation,
                        .auroraextensions_support {
                            display: block;
                            font-size: 14px;
                            margin-top: -24px;
                        }
                    </style>
                ]]></comment>
                <field id="version" translate="label" type="note" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Version</label>
                    <comment><![CDATA[<span class="auroraextensions_version">1.0.0</span>]]></comment>
                </field>
                <field id="vendor" translate="label" type="note" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Vendor</label>
                    <comment><![CDATA[
                        <span class="auroraextensions_vendor">Aurora Extensions&nbsp;<a href="https://auroraextensions.com/" target="_blank">&#128279;</a></span>
                    ]]></comment>
                </field>
                <field id="module" translate="label" type="note" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module</label>
                    <comment><![CDATA[
                        <span class="auroraextensions_module">
                            <code>AuroraExtensions_Stackdriver</code>
                        </span>
                    ]]></comment>
                </field>
                <field id="support" translate="label" type="note" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Support</label>
                    <comment><![CDATA[
                        <span class="auroraextensions_support">
                            <a href="mailto:support@auroraextensions.com">support@auroraextensions.com</a>
                        </span>
                    ]]></comment>
                </field>
                <field id="documentation" translate="label" type="note" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Documentation</label>
                    <comment><![CDATA[
                        <span class="auroraextensions_documentation">
                            <a href="https://docs.auroraextensions.com/magento/extensions/2.x/stackdriver/1.0.0/" target="_blank">v1.0.0</a>
                        </span>
                    ]]></comment>
                </field>
            </group>
            <group id="general" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Stackdriver</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="gcp_project" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Google Cloud Platform Project</label>
                    <comment>The name of the GCP project to use.</comment>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>
                <field id="key_file_path" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>JSON Key File Path</label>
                    <comment>The path to the JSON key file used for authentication.</comment>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>
            </group>
            <group id="logging" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Logging Settings</label>
                <field id="log_channel" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Log Channel</label>
                    <comment>The log name where entries are written. If it does not exist, it will be created.</comment>
                </field>
                <field id="include_log_context" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Include Log Context</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Include context details with each Stackdriver log entry.</comment>
                </field>
                <field id="log_levels" translate="label comment" type="multiselect" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Log Levels</label>
                    <source_model>AuroraExtensions\Stackdriver\Model\Backend\Source\Select\LogLevels</source_model>
                    <comment>Limit Stackdriver log entries to the selected log levels.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
